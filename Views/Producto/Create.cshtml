@model AlmaximoWEB.Models.Producto

@{
    ViewData["Title"] = "Agregar Producto";
    var tiposProducto = ViewBag.TiposProducto as IEnumerable<AlmaximoWEB.Models.TipoProducto>;
}

<h2>Agregar Producto</h2>

<form asp-action="Create" method="post" >
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Clave</label>
        <input asp-for="Clave" class="form-control" required />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label>Tipo de Producto</label>
            <select asp-for="TipoProductoId" class="form-control" asp-items="@(new SelectList(ViewBag.TiposProducto, "Id", "Nombre"))">
                <option value="">Seleccione</option>
            </select>
        </div>
   

    <div class="form-group">
        <label>Precio</label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="EsActivo" class="form-check-input" type="checkbox"  />
        <label asp-for="EsActivo" class="form-check-label"> Activo</label>
    </div>


    <br>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>


